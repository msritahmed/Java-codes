public class Main {
  public static void main(String[] args) {
    int a[]={0,0,0,0,1,1,1,1};
    int n=a.length;
    int ans=0,c=0;
    for(int i=0;i<a.length;i++)
    {
      if(a[i]==0)
      {
        c++;
      }
      else
      {
        ans+=c*(c+1)/2;
        c=0;
      }

    }
    ans+=c*(c+1)/2;

    
    int t=n*(n+1)/2;
    
      System.out.println(t-ans);
  }
}
