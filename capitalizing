public class Main {
  public static void main(String[] args) {
    String s="good moring";
    char ch='m';
    StringBuilder sb=new StringBuilder();
    boolean f=false;

    for(int i=0;i<s.length();i++)
    {
      char c=s.charAt(i);
      if(!f&&c==ch)
      {
        f=true;
      }
      if(f)
      sb.append(Character.toUpperCase(c));
      else
      sb.append(c);

    }
      System.out.println(sb);
  }
}
